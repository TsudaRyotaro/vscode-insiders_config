// 既定の設定を上書きするには、このファイル内に設定を挿入します
{
    "terminal.integrated.shell.windows":  "C:\yourDir\powershell.exe",
    "terminal.integrated.cursorBlinking": true,
    "editor.fontSize": 14,
    "window.openFilesInNewWindow": false,
    "window.reopenFolders": "one",
    "files.autoSave": "afterDelay",
    // Specify the consumer key of your twitter app
    "twitter.consumerkey": "xxxx",

    // Specify the consumer secret of your twitter app
    "twitter.consumersecret": "xxxx",

    // Specify the access token of your twitter app
    "twitter.accesstokenkey": "xxxx",

    // Specify the access token secret of your twitter app
    "twitter.accesstokensecret": "xxxx",
    "editor.mouseWheelZoom": true,
    "window.restoreFullscreen": true,
    "editor.cursorBlinking": "phase",
    "terminal.integrated.commandsToSkipShell": [
        "workbench.action.terminal.focusNext"
    ],
    "files.exclude": {
        "**/*.meta": true,
        "ProjectSettings":true,
        "**/AssetStoreTools":true,
        "**/PhotonChatApi":true,
        "**/*.png":true,
        "**/*.xml":true,
        "**/*.pdf":true,
        "**/*.chm":true,
        "**/*.anim":true,
        "**/*.prefab":true,
        "**/*.unity":true
    }
,
"workbench.activityBar.visible": false,
"workbench.sideBar.location": "left",
"workbench.statusBar.visible": false
}
